<div class="section-header">
  <%% # Page Title %>
  <h1>Index Documents</h1>
  <%% # Page Breadcrumb %>
  <div class="section-header-breadcrumb">
    <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
    <div class="breadcrumb-item"><a href="#">Components</a></div>
    <div class="breadcrumb-item">Index Documents</div>
  </div>
</div>
<div class="section-body">
  <%% # Alert Success %>
  <%% if notice.present? %>
    <div id="alert" class="alert alert-success alert-dismissible show fade" style="transition: opacity 1s ease-in-out; opacity: 1;">
      <div class="alert-body">
        <button id="closeButton" class="close" data-dismiss="alert">
          <span>Ã—</span>
        </button>
        <%%= notice %>
      </div>
    </div>
    <script>
      setTimeout(function() {
        var alertDiv = document.getElementById('alert');
        alertDiv.style.opacity = '0';
        setTimeout(function() {
          alertDiv.remove();
        }, 500); // 1 second after the fade-out animation ends
      }, 1000); // 2 seconds delay before starting the fade-out animation
    </script>
  <%% end %>
  <h2 class="section-title">Documents</h2>
  <p class="section-lead">Example of some Bootstrap table components.</p>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h4>Documents Table</h4>
          <div class="card-header-form">
            <div class="input-group">
              <%%= link_to "New <%= human_name.downcase %>", <%= new_helper(type: :path) %> , class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <tbody>
                <tr>
                  <th>
                  </th>
                  <th>Content</th>
                  <th>Title</th>
                  <th>Action</th>
                </tr>
                <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
                  <%%= render <%= singular_table_name %> %>
                <%% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>