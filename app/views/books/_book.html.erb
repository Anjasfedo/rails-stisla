<tr id="<%= dom_id book %>">
    <td class="p-0 text-center">
    <%= book.title %>
  </td>

    

    <td class="p-0 text-center">
    <%= book.makanan.name %>
  </td>

    

<% if params[:action] == 'index' %>
    <td class="p-0 text-center">
      <div class="btn-group-vertical">
        <%= link_to "Show", book, class: "btn btn-outline-secondary mb-1" %>
        <%= link_to "Edit", edit_book_url(book), class: "btn btn-outline-success mb-1" %> 
        <%= button_to "Destroy", book, method: :delete,  form_class: 'delete-alertbox', class: "btn btn-outline-danger mb-1" %>
      </div>
    </td>
  <% end %>
</tr>