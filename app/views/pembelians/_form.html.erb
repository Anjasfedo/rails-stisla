
<%= simple_form_for(@pembelian) do |f| %>
<div class="card-header">
  <h4>Pembelian Form</h4>
</div>
<div class="card-body">
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
      <%= f.input :kode_barang %>
      <%= f.input :nama_barang %>
      <%= f.input :jumlah_barang %>
      <%= f.input :status %>
  </div>
  <div class="form-actions float-end py-3">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
</div>
<% end %>
