<%= form_with(model: makanan, class: "needs-validation") do |form| %>
  <div class="card-header">
    <h4>Makanan Form</h4>
  </div>
  <div class="card-body">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control #{'is-invalid' if makanan.errors.has_key?(:name)}" %>
      <% if makanan.errors.has_key?(:name) %>
        <div class="text-danger">
          <%= makanan.errors.full_messages_for(:name).join(', ') %>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :halal %>
      <%= form.check_box :halal, class: "form-control #{'is-invalid' if makanan.errors.has_key?(:halal)}" %>
      <% if makanan.errors.has_key?(:halal) %>
        <div class="text-danger">
          <%= makanan.errors.full_messages_for(:halal).join(', ') %>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, class: "form-control #{'is-invalid' if makanan.errors.has_key?(:price)}" %>
      <% if makanan.errors.has_key?(:price) %>
        <div class="text-danger">
          <%= makanan.errors.full_messages_for(:price).join(', ') %>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <label for="">image</label>
      <div class="custom-file">
        <%= form.file_field :image, multiple: true, class: "custom-file-input #{'is-invalid' if makanan.errors.has_key?(:image)}"  %>
        <%= form.label :image, class: "custom-file-label" %>
      </div>
      <% if makanan.errors.has_key?(:image) %>
        <div class="text-danger">
          <%= makanan.errors.full_messages_for(:image).join(', ') %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="card-footer text-right">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
