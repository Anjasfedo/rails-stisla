<tr id="<%= dom_id role %>">
    <td class="p-0 text-center">
    <%= role.name %>
  </td>

    

    <td class="p-0 text-center">
    <%= role.description %>
  </td>

    

<% if params[:action] == 'index' %>
    <td class="p-0 text-center">
      <div class="btn-group-vertical">
        <%= link_to "Show", role, class: "btn btn-outline-secondary mb-1" %>
        <%= link_to "Edit", edit_role_url(role), class: "btn btn-outline-success mb-1" %> 
        <%= button_to "Destroy", role, method: :delete,  form_class: 'delete-alertbox', class: "btn btn-outline-danger mb-1" %>
      </div>
    </td>
  <% end %>
</tr>