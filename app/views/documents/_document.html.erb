<tr  id="<%= dom_id document %>">
  <td class="p-0 text-center">
  </td>
  <td><%= document.content %></td>
  <td class="align-middle">
    <%= document.title %>
  </td>
  <% if params[:action] == 'index' %>
    <td class="p-0 text-center">
      <div class="btn-group-vertical">
        <%= link_to "Show this document", document, class: "btn btn-outline-secondary mb-1" %>
        <%= link_to "Edit this document", edit_document_path(document), class: "btn btn-outline-dark mb-1" %>
        <%= button_to "Destroy this document", document, method: :delete, class: "btn btn-outline-danger mb-1" %>
      </div>
    </td>
  <% end %>
</tr>