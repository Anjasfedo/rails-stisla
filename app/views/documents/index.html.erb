<div class="section-header">
  <%# Page Title %>
  <h1>Index Documents</h1>
  <%# Page Breadcrumb %>
  <div class="section-header-breadcrumb">
    <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
    <div class="breadcrumb-item"><a href="#">Components</a></div>
    <div class="breadcrumb-item">Index Documents</div>
  </div>
</div>
<div class="section-body">
  <%# Alert Success %>
  <% if notice.present? %>
    <div id="alert" class="alert alert-success alert-dismissible show fade" style="transition: opacity 1s ease-in-out; opacity: 1;">
      <div class="alert-body">
        <button id="closeButton" class="close" data-dismiss="alert">
          <span>×</span>
        </button>
        <%= notice %>
      </div>
    </div>
    <script>
      setTimeout(function() {
        var alertDiv = document.getElementById('alert');
        alertDiv.style.opacity = '0';
        setTimeout(function() {
          alertDiv.remove();
        }, 1000); // 1 second after the fade-out animation ends
      }, 2000); // 2 seconds delay before starting the fade-out animation
    </script>
  <% end %>
  <%# Alert Fail %>
  <%# <div class="alert alert-danger alert-dismissible show fade">
    <div class="alert-body">
      <button class="close" data-dismiss="alert">
        <span>×</span>
      </button>
      This is a danger alert.
    </div>
  </div> %>
  <h2 class="section-title">Documents</h2>
  <p class="section-lead">Example of some Bootstrap table components.</p>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h4>Documents Table</h4>
          <div class="card-header-form">
            <div class="input-group">
              <%= link_to "New document", new_document_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <tbody>
                <tr>
                  <th>
                  </th>
                  <th>Content</th>
                  <th>Title</th>
                  <th>Action</th>
                </tr>
                <% @documents.each do |document| %>
                  <%= render document %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>