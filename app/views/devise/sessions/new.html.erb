<section class="section">
  <div class="d-flex flex-wrap align-items-stretch">
    <div class="col-lg-4 col-md-6 col-12 order-lg-1 min-vh-100 order-2 bg-white">
      <div class="p-4 m-3">
        <img src="{% static '/media/img/stisla-fill.svg' %}" alt="logo" width="80" class="shadow-light rounded-circle mb-5 mt-2" />
        <h4 class="text-dark font-weight-normal">Welcome to <span class="font-weight-bold">Mail</span></h4>
        <p class="text-muted">Before you get started, you must login.</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",  tabindex: "1" %>
          </div>
          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control",  tabindex: "2" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <div class="custom-control custom-checkbox">
                <%= f.check_box :remember_me,  class: "custom-control-input", tabindex: "3"  %>
                <%= f.label :remember_me, class: "custom-control-label" %>
              </div>
            </div>
          <% end %>
          <div class="form-group text-right">
            <%= render "devise/shared/links", class: "float-left mt-3" %>
            <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-icon icon-right", tabindex: "4" %>
          </div>
        <% end %>
        <div class="text-center mt-5 text-small">Copyright &copy; Anjasfedo. Made with ðŸ’™ by Stisla</div>
      </div>
    </div>
    <div class="col-lg-8 col-12 order-lg-2 order-1 min-vh-100 background-walk-y position-relative overlay-gradient-bottom" data-background="{% static '/media/img/unsplash/login-bg.jpg' %}">
      <div class="absolute-bottom-left index-2">
        <div class="text-light p-5 pb-2">
          <div class="mb-5 pb-3">
            <h1 class="mb-2 display-4 font-weight-bold">Good Morning</h1>
            <h5 class="font-weight-normal text-muted-transparent">Bali, Indonesia</h5>
          </div>
          Photo by <a class="text-light bb" target="_blank" href="https://unsplash.com/photos/a8lTjWJJgLA">Justin Kauffman</a> on <a class="text-light bb" target="_blank" href="https://unsplash.com">Unsplash</a>
        </div>
      </div>
    </div>
  </div>
</section>
